}

QLabel[badgeStyle="success"] {
    background-color: #28a745;
    color: white;
    border-radius: 12px;
    padding: 4px 12px;
    font-size: 12px;
    font-weight: 600;
}

QLabel[badgeStyle="danger"] {
    background-color: #dc3545;
