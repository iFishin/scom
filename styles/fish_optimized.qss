}

QPushButton#expand_left_button {
    background-color: transparent;
    border-radius: 5px;
}

QPushButton#expand_left_button:hover {
    background-color: rgba(76, 175, 80, 0.5);
}

QPushButton#expand_left_button:pressed {
    background-color: rgba(68, 138, 72, 0.5);
}

QPushButton#nav_button {
    background-color: transparent;
    color: #6c757d;
    border: none;
    border-radius: 0px;
    padding: 12px 16px;
    font-size: 16px; /* UI_FONT_SIZE_XL */
